#:kivy 1.11.1
<Button>:
    font_size: 50
    font_name: 'Resources/Fonts/UbuntuMono-R'
    size_hint: 0.3, 0.3


<MenuScreen>:
    FloatLayout:
        Button:
            text: 'Settings'
            on_press: root.manager.current = 'settings'
            pos_hint: {"x": 0, "y": 0}

        Button:
            text: 'Quit'
            pos_hint: {"x": 0.4, "y": 0.4}
            on_press: app.get_running_app().stop() # Exit the app

<SettingsScreen>:
    FloatLayout:
        Button:
            text: 'Change a setting'
            pos_hint: {"x": 0, "y": 0}

        Button:
            text: 'Back'
            pos_hint: {"x": 0.4, "y": 0.4}

            on_press: root.manager.current = 'menu'